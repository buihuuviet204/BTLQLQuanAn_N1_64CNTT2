<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25px"
    android:backgroundTint="#F6EFC1"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_nhan_vien"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txt_ma_nhan_vien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:layout_toEndOf="@id/img_nhan_vien"
            android:text="Mã nhân viên"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_ho_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ma_nhan_vien"
            android:layout_toEndOf="@id/img_nhan_vien"
            android:text="Họ và tên"
            android:textSize="24sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>