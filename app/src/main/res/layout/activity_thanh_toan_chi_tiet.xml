<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Header với nút Back và tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:clickable="true"
                android:focusable="true"
                app:tint="#000000" />

            <TextView
                android:id="@+id/tv_title_thanh_toan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THANH TOÁN"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Thông tin chung -->
        <LinearLayout
            android:id="@+id/layout_thong_tin_chung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_so_hoa_don"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số hóa đơn: 01"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_so_ban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số bàn: 1"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_so_dien_thoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại: 0988888888"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày: 10/3/2025"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_trang_thai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: --"
                android:textSize="16sp"
                android:textColor="#424242" />
        </LinearLayout>

        <!-- Chi tiết hóa đơn -->
        <LinearLayout
            android:id="@+id/layout_chi_tiet_hoa_don"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_chi_tiet_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết hóa đơn >"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TableLayout
                android:id="@+id/table_chi_tiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow android:padding="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="STT"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Tên món"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="SL"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giá"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:gravity="end" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Thành tiền"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:gravity="end" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <!-- Dữ liệu mẫu sẽ được thay thế bằng dữ liệu từ Firebase -->
                <TableRow android:padding="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="1"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="TM1"
                        android:textSize="16sp"
                        android:textColor="#424242" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="1"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1000"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="end" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="1000"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="end" />
                </TableRow>

                <!-- Các TableRow khác tương tự -->
                <TableRow android:padding="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="2"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="TM1"
                        android:textSize="16sp"
                        android:textColor="#424242" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="2"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1000"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="end" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="2000"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="end" />
                </TableRow>

                <TableRow android:padding="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="3"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="TM1"
                        android:textSize="16sp"
                        android:textColor="#424242" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="3"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1000"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="end" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="3000"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="end" />
                </TableRow>

                <TableRow android:padding="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="4"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="TM1"
                        android:textSize="16sp"
                        android:textColor="#424242" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="4"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1000"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="end" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="4000"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="end" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <!-- Đổi điểm -->
        <LinearLayout
            android:id="@+id/layout_doi_diem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tv_label_doi_diem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đổi điểm"
                android:textSize="18sp"
                android:textColor="#424242" />

            <EditText
                android:id="@+id/et_doi_diem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="#424242"
                android:gravity="end"
                android:hint="Nhập điểm"
                android:inputType="number" />
        </LinearLayout>

        <!-- Tổng tiền -->
        <LinearLayout
            android:id="@+id/layout_tong_tien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tv_label_tong_tien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng tiền"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#424242" />

            <TextView
                android:id="@+id/tv_tong_tien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:gravity="end"
                android:text="10000" />
        </LinearLayout>

        <!-- Nút Thanh toán -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#F6EFC1">
            <Button
                android:id="@+id/btn_thanh_toan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Thanh toán"
                android:textSize="18sp"
                android:textColor="#000000"
                android:backgroundTint="#F6EFC1"
                android:padding="12dp"
                android:layout_margin="0dp"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>