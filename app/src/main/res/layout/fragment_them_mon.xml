<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QLM.ThemMonFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:id="@+id/txt_them"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THEM MON AN"
            android:fontFamily="@font/comfortaa"
            android:textSize="35dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"/>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout

            app:neomorph_elevation="1dp"
            app:neomorph_background_color="#C7C7C7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/footer"
            app:neomorph_shadow_type="inner"
            app:layout_constraintTop_toBottomOf="@id/txt_them"
            app:neomorph_corner_radius="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THONG TIN MON AN"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="24dp"
                    android:gravity="center" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Ten mon an"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />
                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:neomorph_elevation="1dp"
                    app:neomorph_corner_radius="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    app:neomorph_background_color="@color/white"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edit_ten"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center_vertical"
                        android:hint="Nhap ten mon"
                        android:textSize="15dp"
                        tools:ignore="TouchTargetSizeCheck" />
                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Loai"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />
                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:neomorph_elevation="1dp"
                    app:neomorph_corner_radius="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    app:neomorph_background_color="@color/white"
                    android:layout_marginTop="10dp">
                    <Spinner
                        style="@style/CustomSpinnerStyle"

                        android:id="@+id/spinneradd"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        tools:ignore="TouchTargetSizeCheck"
                        />

                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Gia ban"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />
                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:neomorph_elevation="1dp"
                    app:neomorph_corner_radius="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    app:neomorph_background_color="@color/white">

                    <EditText
                        android:id="@+id/edit_giaban"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center_vertical"
                        android:hint="Nhap gia ban"
                        android:textSize="15dp"
                        tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />
                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Hinh anh"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />
                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    app:neomorph_elevation="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    app:neomorph_background_color="@color/white">

                    <ImageButton
                        android:id="@+id/img_bt"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_upload"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
            </LinearLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        <FrameLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/btn_them"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="#2ACD84"
                android:text="Xac nhan"
                android:textColor="@color/black"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>