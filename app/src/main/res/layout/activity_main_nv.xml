<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8CFA8"
    tools:context=".ActivityMainNV">



    <!-- Thanh trên cùng chứa avatar + icon đăng xuất -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:contentDescription="Menu"
            android:src="@drawable/menu_burger" />

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="#E6B17F"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">
                <!-- Icon User -->

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="1dp"
                    android:contentDescription="User"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="197dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Nguyễn Văn Bình Minh"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="60dp"
            android:layout_gravity="end"
            android:contentDescription="Logout"
            android:src="@drawable/sign_out_alt" />
    </LinearLayout>


    <TextView
        android:fontFamily="@font/comfortaa"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Trang chủ"
        android:textColor="@android:color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="546dp"
            android:columnCount="2"
            android:rowCount="2">

            <FrameLayout
                android:id="@+id/fram1"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_layout">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="561dp"
                    android:columnCount="2">

                    <LinearLayout
                        android:layout_width="176dp"
                        android:layout_height="174dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/order"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/order_food" />

                        <TextView
                            android:fontFamily="@font/comfortaa"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:text="Đặt món"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="177dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/dining_table_image"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:fontFamily="@font/comfortaa"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Thông tin ca"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>
                </GridLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fram2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/happy_client"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/happy_client" />

                        <TextView
                            android:fontFamily="@font/comfortaa"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Quản lý khách hàng"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/payment"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/cashless_payment" />

                        <TextView
                            android:fontFamily="@font/comfortaa"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Quản lý khách hàng"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

        </GridLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>